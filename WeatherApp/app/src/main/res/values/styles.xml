<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <!-- Цвет используется для toolbar -->
        <item name="colorPrimary">@color/color_light_blue_500</item>
        <!-- Цвет используется для system bar -->
        <item name="colorPrimaryDark">@color/color_light_blue_500_dark</item>

        <item name="colorSecondary">@color/color_indigo_700</item>

        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>

        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        
    </style>

    <style name="AtmosphericIndicatorsImageViewStyle">
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_width">32dp</item>
    </style>
    
    <style name="AppDarkTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="Widget.App.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">?attr/textAppearanceHeadline6</item>
        <item name="subtitleTextStyle">?attr/textAppearanceSubtitle1</item>
        <item name="background">@color/material_grey_900</item>
    </style>

</resources>