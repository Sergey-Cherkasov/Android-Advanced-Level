<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="@string/units_header">

        <SwitchPreferenceCompat
            app:key="temperature_units"
            app:title="@string/temperature"
            app:summaryOff="@string/temperature_summary_off"
            app:summaryOn="@string/temperature_summary_on" />

        <SwitchPreferenceCompat
            app:key="speed_units"
            app:title="@string/speed_units"
            app:summaryOff="@string/speed_summary_off"
            app:summaryOn="@string/speed_summary_on" />

    </PreferenceCategory>
</PreferenceScreen>